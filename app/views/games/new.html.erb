<div class container >
<h1>New Game</h1>
<p>Find me in app/views/games/new.html.erb</p>
<% @letters.each do |letter| %>
  <%= letter %>
<% end %>

<div>
<form action="/score" method="POST" data-turbo = "false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class = "input-group"></div>
  <label for="query">Type the longest word you can make from these letters:</label>
  <input type="hidden" name="letters" value="<%= @letters.join(",")%>" />
  <input id="query" name="query" type="text" />
  <input type="submit" value="Play" class = "btn btn-primary"/>
</form>
</div>
</div>
